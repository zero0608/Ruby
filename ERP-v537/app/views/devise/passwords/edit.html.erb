<div class="px-5 py-5 login-signup">
  <div class="container">
    <div class="row">
      <div class="col-md-6 p-5 mx-auto my-5 rounded-1" style="background: rgba(255, 252, 245, 0.85);">
        <h2 class="text-center">Change your password</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <% flash.each do |message_type, message| %>
            <%= content_tag(:div, message,  class: "text-center alert alert-#{message_type}", role: "alert") %>
          <% end %>
          
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <%= f.label :password, "New password", class: "text-info" %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Confirm new password", class: "text-info" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="actions form-group">
            <%= f.submit "Change my password", class: 'btn btn-primary' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
        
      </div>
    </div>
  </div>
</div>
