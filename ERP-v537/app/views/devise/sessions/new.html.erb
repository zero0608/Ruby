<div class="container position-center" style="top: 45%">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row justify-content-center">
      <div class="col12 col-md-6 col-lg-3">
        <div class="mb-5 text-center">
          <%= image_tag "logo-em-2.png", class: "img-fluid w-75" %>
        </div>

        <div class="mb-5">
          <span class="header2 text-grey font-weight-normal">Login to Account</span>
        </div>

        <div class="mb-5">
          <label>Email</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Your Email", class: "form-control login-form mb-4" %>
          
          <label>Password</label>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Your Password", class: "form-control login-form mb-3" %>
          
          <% if devise_mapping.rememberable? %>
            <div class="w-100">
              <%= f.check_box :remember_me, class: "mr-1", style: "transform: translateY(2px)" %>
              <span>Remember me</span>
            </div>
          <% end %>
        </div>
        <button type="submit" class="btn btn-primary mb-3 w-100">Log In</button>
        <div class="text-center">
          <a href="https://northbanq.slack.com/" class="text-light-grey">
            Forget Password Contact Administrator
          </a>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="position-absolute w-100 text-center" style="left: 0; bottom: 1rem">
  &copy; <%= Date.current.year %> Northbanq All Rights Reserved
</div>