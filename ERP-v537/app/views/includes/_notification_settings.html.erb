<div class="modal" id="notificationModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-thin">
    <% @user = current_user %>
    <%= form_for [:admin, @user], data: { reflex: "submit->UserReflex#notification_setting", user_id: current_user.id }, html: { id: "notification_form" } do |ff| %>
      <%= ff.fields :notification_setting, model: OpenStruct.new(ff.object.notification_setting) do |f| %>
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Notification Settings</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="row mx-0">
              <div class="col-4 mb-3">
                <span>Ready to Ship</span>
              </div>
              <div class="col-2 mb-3">
                <%= f.check_box :ready_to_ship, data: {switch: "blue"} %>
                <%= f.label :ready_to_ship, "&nbsp;".html_safe %>
              </div>

              <div class="col-4 mb-3">
                <span>Booked</span>
              </div>
              <div class="col-2 mb-3">
                <%= f.check_box :booked, data: {switch: "blue"} %>
                <%= f.label :booked, "&nbsp;".html_safe %>
              </div>
          
              <div class="col-4 mb-3">
                <span>Shipped</span>
              </div>
              <div class="col-2 mb-3">
                <%= f.check_box :shipped, data: {switch: "blue"} %>
                <%= f.label :shipped, "&nbsp;".html_safe %>
              </div>
          
              <div class="col-4 mb-3">
                <span>Arriving Container</span>
              </div>
              <div class="col-2 mb-3">
                <%= f.check_box :arriving_container, data: {switch: "blue"} %>
                <%= f.label :arriving_container, "&nbsp;".html_safe %>
              </div>

              <div class="col-4 mb-3">
                <span>Cancel Request</span>
              </div>
              <div class="col-2 mb-3">
                <%= f.check_box :cancel_request, data: {switch: "blue"} %>
                <%= f.label :cancel_request, "&nbsp;".html_safe %>
              </div>
          
              <div class="col-4 mb-3">
                <span>Cancel Confirm</span>
              </div>
              <div class="col-2 mb-3">
                <%= f.check_box :cancel_confirm, data: {switch: "blue"} %>
                <%= f.label :cancel_confirm, "&nbsp;".html_safe %>
              </div>
          
              <div class="col-4 mb-3">
                <span>Hold Request</span>
              </div>
              <div class="col-2 mb-3">
                <%= f.check_box :hold_request, data: {switch: "blue"} %>
                <%= f.label :hold_request, "&nbsp;".html_safe %>
              </div>
          
              <div class="col-4 mb-3">
                <span>Hold Confirm</span>
              </div>
              <div class="col-2 mb-3">
                <%= f.check_box :hold_confirm, data: {switch: "blue"} %>
                <%= f.label :hold_confirm, "&nbsp;".html_safe %>
              </div>
          
              <div class="col-4 mb-3">
                <span>Pending Payment</span>
              </div>
              <div class="col-2 mb-3">
                <%= f.check_box :pending_payment, data: {switch: "blue"} %>
                <%= f.label :pending_payment, "&nbsp;".html_safe %>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary mr-4" data-dismiss="modal">Close</button>
            <%= f.submit "Submit", value: "Submit", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>