  <div class="row hide-print">
    <div class="col-10 mb-5">
      <span class="header1">Export Records</span>
    </div>

    <div class="col-2 mb-5">
      <button class="btn btn-primary w-100 dripicons-print" onclick="window.print()"> Print</button>
    </div>
  </div>
    
  <section id="record_export">
    <%= render partial: "record_export", locals: { records: @records, current_user: @current_user } %>
  </section>
</div>

