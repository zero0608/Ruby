<div class="container px-4">
  <%= render "includes/admin_sub_nav" %>

  <div class="row">
    <div class="col-2">
      <%= render "includes/side_nav_shipping" %>
    </div>

    <div class="col-10">
      <% if current_user.user_group.admin_cru %>
        <a href="<%= new_admin_shipment_code_path %>">
          <button class="btn btn-primary">
            <%= show_svg("plus.svg") %>
            Add Codes
          </button>
        </a>
      <% end %>
      
      <div class="table-responsive">
        <table class="table table-borderless table-hover">
          <thead>
            <tr>
              <th style="width: 45%">SKU</th>
              <th style="width: 45%">Description</th>
              <th style="width: 10%">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @shipment_codes.each do |code| %>
              <tr>
                <td><%= code.sku_for_discount %></td>
                <td><%= code.description %></td>
                <td>
                  <% if current_user.user_group.admin_cru %>
                    <a href="<%= edit_admin_shipment_code_path(code) %>" class="mr-4">
                      <%= show_svg("recent_activity.svg") %>
                    </a>
                    <%= link_to admin_shipment_code_path(code), method: :delete, data: { confirm: "Are you sure you want to delete this shipment code?" } do %>
                      <%= show_svg("close.svg") %>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>