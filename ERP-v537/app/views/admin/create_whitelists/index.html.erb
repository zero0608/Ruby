<div class="container h-100 px-4 d-flex flex-column">
  <%= render "includes/admin_sub_nav" %>

  <div class="row flex-auto">
    <div class="col-2">
      <%= render "includes/side_nav_team" %>
    </div>

    <div class="col-10 d-flex flex-column">
      <p class="header2">Whitelists</p>

      <% if current_user.user_group.admin_cru %>
        <a href="<%= new_admin_create_whitelist_path %>">
          <button class="btn btn-primary">
            <%= show_svg("plus.svg") %>
            Add IPs
          </button>
        </a>
      <% end %>

      <div class="table-responsive flex-auto">
        <table class="table table-borderless table-hover">
          <thead>
            <tr>
              <th style="width: 20%">IP Address</th>
              <th style="width: 20%">Name</th>
              <th style="width: 30%">Comments</th>
              <th style="width: 10%">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @whitelist_ips.each do |whitelist_ip| %>
              <tr>
                <td><%= whitelist_ip.ip_address %></td>
                <td><%= whitelist_ip.name %></td>
                <td><%= whitelist_ip.description %></td>
                <td>
                  <% if current_user.user_group.admin_cru %>
                    <a href="<%= edit_admin_create_whitelist_path(whitelist_ip) %>" class="mr-4">
                      <%= show_svg("recent_activity.svg") %>
                    </a>
                    <%= link_to admin_create_whitelist_path(whitelist_ip), method: :delete, data: { confirm: "Are you sure you want to delete this IP?" } do %>
                      <%= show_svg("close.svg") %>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>