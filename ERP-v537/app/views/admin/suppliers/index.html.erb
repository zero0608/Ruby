<div class="container px-4">
  <%= render "includes/admin_sub_nav" %>

  <div class="row">
    <div class="col-2">
      <%= render "includes/side_nav_production" %>
    </div>

    <div class="col-10">
      <% if current_user.user_group.admin_cru %>
        <a href="<%= new_admin_supplier_path %>">
          <button class="btn btn-primary">
            <%= show_svg("plus.svg") %>
            Create Supplier
          </button>
        </a>
      <% end %>

      <div class="table-responsive">
        <table class="table table-borderless table-hover">
          <thead>
            <tr>
              <th style="width: 90%">Name</th>
              <th style="width: 10%">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @suppliers.each do |supplier| %>
              <tr>
                <td><%= supplier&.name %></td>
                <td class="text-center">
                  <% if current_user.user_group.admin_cru %>
                    <a href="<%= edit_admin_supplier_path(supplier) %>" class="mr-4">
                      <%= show_svg("recent_activity.svg") %>
                    </a>
                    <%= link_to admin_supplier_path(supplier), method: :delete, data: { confirm: "Are you sure you want to delete this supplier?" } do %>
                      <%= show_svg("close.svg") %>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>