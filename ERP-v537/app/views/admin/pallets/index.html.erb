<div class="container px-4">
  <%= render "includes/admin_sub_nav" %>

  <div class="row">
    <div class="col-2">
      <%= render "includes/side_nav_shipping" %>
    </div>

    <div class="col-10">
      <% if current_user.user_group.admin_cru %>
        <a href="<%= new_admin_pallet_path %>">
          <button class="btn btn-primary">
            <%= show_svg("plus.svg") %>
            Create Pallet
          </button>
        </a>
      <% end %>
      
      <div class="table-responsive">
        <table class="table table-borderless table-hover">
          <thead>
            <tr>
              <th>Pallet Size</th>
              <th class="text-center" colspan="3">Pallet Dimension (inch)</th>
              <th>Pallet Weight (lbs)</th>
              <th>Action</th>
            </tr>
            <tr>
              <td style="width: 30%"></td>
              <td style="width: 15%">Length</td>
              <td style="width: 15%">Width</td>
              <td style="width: 15%">Height</td>
              <td style="width: 15%"></td>
              <td style="width: 10%"></td>
            </tr>
          </thead>
          <tbody>
            <% @pallets.each do |pallet| %>
              <tr>
                <td><%= pallet.pallet_size %></td>
                <td><%= pallet.pallet_length %></td>
                <td><%= pallet.pallet_width %></td>
                <td><%= pallet.pallet_height %></td>
                <td><%= pallet.pallet_weight %></td>
                <td>
                  <% if current_user.user_group.admin_cru %>
                    <a href="<%= edit_admin_pallet_path(pallet.id) %>" class="mr-4">
                      <%= show_svg("recent_activity.svg") %>
                    </a>
                    <%= link_to admin_pallet_path(pallet.id), method: :delete, data: { confirm: "Are you sure you want to delete this pallet?" } do %>
                      <%= show_svg("close.svg") %>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>