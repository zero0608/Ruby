<div class="container px-4">
  <%= render "includes/admin_sub_nav" %>

  <div class="row">
    <div class="col-2">
      <%= render "includes/side_nav_shipping" %>
    </div>

    <div class="col-10">
      <div class="table-responsive">
        <table class="table table-borderless table-hover">
          <thead>
            <tr><h3>Zip Codes</h3></tr>
            <tr>
              <th style="width: 45%">Zip code</th>
              <th style="width: 45%">Remote</th>
            </tr>
          </thead>
          <tbody>
            <% @codes&.each do |code| %>
              <tr>
                <td><%= code.zip_code %></td>
                <td><%= code.remote %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>