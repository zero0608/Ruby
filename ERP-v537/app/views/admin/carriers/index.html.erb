<div class="container px-4">
  <%= render "includes/admin_sub_nav" %>

  <div class="row">
    <div class="col-2">
      <%= render "includes/side_nav_shipping" %>
    </div>

    <div class="col-10">
      <% if current_user.user_group.admin_cru %>
        <a href="<%= new_admin_carrier_path %>">
          <button class="btn btn-primary">
            <%= show_svg("plus.svg") %>
            Create Carrier
          </button>
        </a>
      <% end %>

      <div class="table-responsive">
        <table class="table table-borderless table-hover">
          <thead>
            <tr>
              <th style="width: 25%">Name</th>
              <th style="width: 25%">Broker</th>
              <th style="width: 30%">Country</th>
              <th style="width: 10%">Status</th>
              <th style="width: 10%">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @carriers.order(:country, :truck_broker_id, :name).each do |carrier| %>
              <tr>
                <td><%= carrier.name %></td>
                <td><%= carrier&.truck_broker&.name %> (<%= carrier&.truck_broker&.country %>)</td>
                <td><%= carrier.country.upcase %></td>
                <td>
                  <span class="badge badge-outline-grey">
                    <%= carrier.inactive ? "Inactive" : "Active" %>
                  </span>
                </td>
                <td>
                  <% if current_user.user_group.admin_cru %>
                    <a href="<%= edit_admin_carrier_path(carrier) %>" class="mr-4">
                      <%= show_svg("recent_activity.svg") %>
                    </a>
                    <%= link_to admin_carrier_path(carrier), method: :delete, data: { confirm: "Are you sure you want to delete this carrier?" } do %>
                      <%= show_svg("close.svg") %>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>