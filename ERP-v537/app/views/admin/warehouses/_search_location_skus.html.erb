<div class="row mx-0">
  <% @product_variants.each do |variant| %>
    <% variant.cartons.each do |carton| %>
      <div class="col-12 mb-3">
        <a class="row no-gutters p-3 border-grey bg-white rounded-5 select-carton" data-carton-id="<%= carton.id %>" data-sku="<%= variant&.sku&.upcase %>" data-index="<%= carton&.carton_detail&.index %>" data-max-index="<%= carton&.carton_detail&.product&.carton_details&.maximum(:index) %>">
          <div class="col-5">
            <span class="text-light-grey">SKU</span><br>
            <span class="header1" style="font-size: 15px"><%= variant&.sku&.upcase %></span>
          </div>
          <div class="col-4">
            <span class="text-light-grey">Carton</span><br>
            <span class="header1" style="font-size: 15px">
              <%= carton&.carton_detail&.index %> / <%= carton&.carton_detail&.product&.carton_details&.maximum(:index) %>
            </span>
          </div>
          <div class="col-3">
            <span class="text-light-grey">In-stock</span><br>
            <span class="header1" style="font-size: 15px">
              <%= carton.carton_locations.sum(:quantity) %>
            </span>
          </div>
          <div class="col-12">
            <span class="text-light-grey"><%= variant&.title %></span>
          </div>
        </a>
      </div>
    <% end %>
  <% end %>
</div>