<div id="layoutSidenav" class="warehouse-layout">
  <%= render "includes/flash_messages" %>
  <div class="container bg-white-grey h-100 overflow-auto d-flex flex-column">
    <div class="row p-3">
      <div class="col-12 mb-3">
        <span class="header1">Add Inventory to Location</span>
      </div>
      <div class="col-3 mb-3">
        <span class="text-light-grey">Rack</span><br>
        <span class="header1"><%= @product_location.rack %></span>
      </div>

      <div class="col-3 mb-3">
        <span class="text-light-grey">Level</span><br>
        <span class="header1"><%= @product_location.level %></span>
      </div>

      <div class="col-3 mb-3">
        <span class="text-light-grey">Bin</span><br>
        <span class="header1"><%= @product_location.bin %></span>
      </div>
      <div class="col-6 mb-3">
        <p class="header2">Search SKU</p>
        <input type="text" class="form-control" style="height: 2.5rem" data-reflex="debounced:input->WarehouseReflex#search_location_sku" data-user-id="<%= current_user.id %>">
      </div>

      <%= form_tag assign_admin_location_to_product_admin_warehouses_path(location_id: @product_location.id), class: "col-6" do |f| %>
        <div class="row no-gutters">
          <div class="col-12">
            <p class="header2" id="selected-sku">&nbsp;</p>
            <%= hidden_field_tag :carton_id %>
          </div>
          <div class="col-9 pr-3 mb-3">
            <%= number_field_tag :quantity, "", class: "form-control", style: "height: 2.5rem", min: 0, required: true %>
          </div>
          <div class="col-3 mb-3">
            <button type="button" class="btn text-green bg-light-green font-weight-bold w-100" style="height: 2.5rem; min-width: initial" data-toggle="modal" data-target="#confirm">+</button>
          </div>
        </div>

        <div class="modal" id="confirm" tabindex="-1" aria-hidden="true">
          <div class="modal-dialog" style="max-width: calc(100% - 20px); position: absolute; transform: none !important; top: initial; bottom: 1rem; left: 10px">
            <div class="modal-content" style="background: none">
              <div class="row mx-0">
                <div class="col-12 mb-2">
                  <button type="submit" class="btn text-green bg-light-green w-100 rounded-5" style="font-size: 15px; height: 5rem">
                    Add <span id="total"></span> to Rack - <%= @product_location.rack %> Level - <%= @product_location.level %> Bin - <%= @product_location.bin %>
                  </button>
                </div>
                <div class="col-12">
                  <button type="button" class="btn btn-secondary mr-4 w-100 rounded-5" data-dismiss="modal" style="font-size: 15px; height: 5rem">Cancel</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="col-12 mb-1">
        <span class="text-light-grey">Results</span>
      </div>
      <div class="col-12 border-bottom"></div>
    </div>

    <section id="warehouse-search-location-sku" class="flex-auto"></section>
  </div>
</div>

<div class="navbar footer bg-white">
  <div class="col-10">
    <a>
      <%= @current_user.username if @current_user.username.present? %>
      <%= "- " + @current_user.warehouse.name if @current_user.warehouse.name.present? %>
    </a>
  </div>
  <div class="col-2 text-right">
    <a href="<%= show_location_admin_warehouses_path(location_id: @product_location.id) %>" class="icon-large-left">
      <%= show_svg("ri-arrow-up-line.svg") %>
    </a>
  </div>
</div>

<script type="text/javascript">
  $(document).on("click", ".select-carton", function() {
    $("#carton_id").val($(this).data("carton-id"));
    $("#selected-sku").text($(this).data("sku") + " (" + $(this).data("index") + " / " + $(this).data("max-index") + ")");
  });

  $("#quantity").on("change", function() {
    $("#total").text($(this).val());
  });
</script>