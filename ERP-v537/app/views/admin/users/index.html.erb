<div class="container px-4">
  <%= render "includes/admin_sub_nav" %>

  <div class="row">
    <div class="col-2">
      <%= render "includes/side_nav_team" %>
    </div>

    <div class="col-10">
      <% if current_user.user_group.admin_cru %>
        <a href="<%= new_admin_user_path %>">
          <button class="btn btn-primary">
            <%= show_svg("plus.svg") %>
            Create User
          </button>
        </a>
      <% end %>

      <div class="table-responsive mb-3">
        <table class="table table-borderless table-hover">
          <thead>
            <tr>
              <th style="width: 25%">Name</th>
              <th style="width: 25%">Email</th>
              <th style="width: 10%">Group</th>
              <th style="width: 10%">Status</th>
              <th style="width: 10%">2FA</th>
              <th style="width: 20%">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @users.order(:user_group_id, :first_name).where(deactivate: [false, nil]).each do |user| %>
              <tr>
                <td><%= user&.full_name %></td>
                <td><%= user&.email %></td>
                <td><%= user&.user_group&.name %></td>
                <td><% if user&.deactivate %>Deactivated<% else %>Active<% end %></td>
                <td><% if user&.otp_required_for_login %>Active<% else %>Deactivated<% end %></td>
                <td>
                  <% if current_user.user_group.admin_cru %>
                    <a href="<%= change_password_admin_user_path(user) %>" class="mr-4">
                      Reset Password
                    </a>
                    <a href="<%= edit_admin_user_path(user) %>" class="mr-4">
                      <%= show_svg("recent_activity.svg") %>
                    </a>
                    <%= link_to admin_user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user?" } do %>
                      <%= show_svg("close.svg") %>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>