<div class="container px-4">
  <div class="row">
    <div class="col-12">
      <%= form_for @user, url: { action: "update" }, html: { class: "form-horizontal form-bordered" } do |f| %>
        <div class="row">
          <div class="col-12 mb-3">
            <p class="header1">Two Factor Verification</p>
            <p>
              Protect your account with Two Factor verification. Prevent hackers from accessing your account with an additional layer of security. When you sign in, Multi Step verification helps make sure your personal information stays private, safe and secure.</p>
            <label>Activate</label><br>
            <%= f.check_box :otp_required_for_login, data: { switch: "blue" } %>
            <%= f.label :otp_required_for_login, "&nbsp;".html_safe %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-12">
            <%= link_to "Cancel", root_path, class: "btn btn-secondary mr-4" %>
            <%= f.submit "Submit", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>