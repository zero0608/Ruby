<% if @risk_indicator.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <% @risk_indicator.errors.full_messages.each do |message|%>
        <%= message %><br>
    <%end%>
  </div>
<%end%>

<div class="row">
  <div class="col-6 mb-3">
    <%= f.label :risk_type %>
    <%= f.text_field :risk_type, class: 'form-control', required: true %>
  </div>

  <div class="col-6 mb-3">
    <%= f.label :assigned_status %>
    <%= f.select :assigned_status, options_for_select(RiskIndicator.assigned_statuses.keys.map { |w| [w.titleize, w] }, :selected => f.object.assigned_status), {}, class: "form-control" %>
  </div>

  <div class="col-12 mb-3">
    <%= link_to "Cancel", admin_risk_indicators_path, class: "btn btn-secondary mr-4" %>
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
</div>