<div class="container px-4">
  <%= render "includes/admin_sub_nav" %>

  <div class="row">
    <div class="col-2">
      <%= render "includes/side_nav_shipping" %>
    </div>

    <div class="col-10">
      <%= form_for @white_glove_directory, url: { action: "update" }, html: { class: "form-horizontal form-bordered needs-validation mb-5", novalidate: true } do |f| %>
        <%= render partial: "form", locals: { f: f, current_user: current_user } %>
      <% end %>
      
      <% if current_user.user_group.admin_cru %>
        <a href="<%= new_admin_white_glove_address_path(white_glove_directory_id: @white_glove_directory.id) %>">
          <button class="btn btn-primary">
            <%= show_svg("plus.svg") %>
            Add Address
          </button>
        </a>
      <% end %>
      
      <div class="table-responsive">
        <table class="table table-borderless table-hover">
          <thead>
            <tr>
              <th style="width: 45%">Address</th>
              <th style="width: 45%">State</th>
              <th style="width: 10%">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @white_glove_directory.white_glove_addresses.order(:company).each do |address| %>
              <tr>
                <td><%= address.address1 %></td>
                <td><%= address.address2 %></td>
                <td>
                  <% if current_user.user_group.admin_cru %>
                    <a href="<%= edit_admin_white_glove_address_path(address) %>" class="mr-4">
                      <%= show_svg("recent_activity.svg") %>
                    </a>
                    <%= link_to admin_white_glove_address_path(address), method: :delete, data: { confirm: "Are you sure you want to delete this address?" } do %>
                      <%= show_svg("close.svg") %>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>