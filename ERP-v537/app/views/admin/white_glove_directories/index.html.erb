<div class="container px-4">
  <%= render "includes/admin_sub_nav" %>

  <div class="row">
    <div class="col-2">
      <%= render "includes/side_nav_shipping" %>
    </div>

    <div class="col-10">
      <% if current_user.user_group.admin_cru %>
        <a href="<%= new_admin_white_glove_directory_path %>">
          <button class="btn btn-primary">
            <%= show_svg("plus.svg") %>
            Add Directory
          </button>
        </a>
      <% end %>
      
      <div class="table-responsive">
        <table class="table table-borderless table-hover">
          <thead>
            <tr>
              <th style="width: 45%">Company Name</th>
              <th style="width: 45%">Country</th>
              <th style="width: 10%">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @white_glove_directories.order(store: :desc, company_name: :asc).each do |directory| %>
              <tr>
                <td><%= directory.company_name %></td>
                <td><%= directory.store.upcase %></td>
                <td>
                  <% if current_user.user_group.admin_cru %>
                    <a href="<%= edit_admin_white_glove_directory_path(directory.id) %>" class="mr-4">
                      <%= show_svg("recent_activity.svg") %>
                    </a>
                    <%= link_to admin_white_glove_directory_path(directory.id), method: :delete, data: { confirm: "Are you sure you want to delete this directory?" } do %>
                      <%= show_svg("close.svg") %>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>