<%= ff.hidden_field :store, value: @product_variant.store %>
<tr>
  <td><%= index %></td>
  
  <td>
    <%= ff.text_field :rack, class: 'form-control', required: false %>
  </td>

  <td>
    <%= ff.text_field :level, class: 'form-control', required: false %>
  </td>

  <td>
    <%= ff.text_field :bin, class: 'form-control', required: false %>
  </td>

  <td>
    <%= ff.text_field :quantity, class: 'form-control', required: false %>
  </td>

  <td>
    <a data-reflex="click->ProductVariantReflex#delete_location" data-id="<%= ff.object.id %>" data-user_id= "<%= current_user.id %>">
      <%= show_svg("trash.svg") %>
    </a>
  </td>
</tr>