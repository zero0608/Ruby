<div class="container px-4">
  <%= render "includes/admin_sub_nav" %>

  <div class="row">
    <div class="col-2">
      <%= render "includes/side_nav_team" %>
    </div>

    <div class="col-10">
      <% if current_user.user_group.admin_cru %>
        <a href="<%= new_admin_showroom_path %>">
          <button class="btn btn-primary mb-3">
            <%= show_svg("plus.svg") %>
            Create Showroom
          </button>
        </a>
      <% end %>

      <div class="table-responsive">
        <table class="table table-borderless table-hover">
          <thead>
            <tr>
              <th style="width: 30%">Name</th>
              <th style="width: 30%">Showroom Code</th>
              <th style="width: 30%">Store</th>
              <th style="width: 10%">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @showrooms.order(:store, :created_at).each do |showroom| %>
              <tr>
                <td><%= showroom.name %></td>
                <td><%= showroom.abbreviation %></td>
                <td><%= showroom&.store.upcase %></td>
                <td>
                  <% if current_user.user_group.admin_cru %>
                    <a href="<%= edit_admin_showroom_path(showroom.id) %>" class="mr-4">
                      <%= show_svg("recent_activity.svg") %>
                    </a>
                    <%= link_to admin_showroom_path(showroom.id), method: :delete, data: { confirm: "Are you sure you want to delete this user showroom?" } do %>
                      <%= show_svg("close.svg") %>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>