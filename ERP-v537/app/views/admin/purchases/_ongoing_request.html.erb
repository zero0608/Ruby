<div class="row">
  <div class="col-12 mb-3">
    <div class="table-responsive">
      <table class="table table-borderless table-hover">
        <thead>
          <tr>
            <th style="width: 10%">Order Number</th>
            <th style="width: 20%">Description</th>
            <th style="width: 10%">Type</th>
            <th style="width: 10%">SKU</th>
            <th style="width: 10%">Order Qty</th>
            <th style="width: 10%">Cancel Qty</th>
            <th style="width: 10%">Final Qty</th>
            <th style="width: 20%"></th>
          </tr>
        </thead>
        <tbody>
          <% @purchase_cancelreqs.each do |req| %>
            <tr>
              <% if req.purchase&.store == "us" %>
                <td><%= link_to "TUS" + "#{req.purchase.id}", admin_purchase_path(id: req.purchase.id, source: "request"), data: { turbolinks: false } %></td>
              <% else %>
                <td><%= link_to "TCA" + "#{req.purchase.id}", admin_purchase_path(id: req.purchase.id, source: "request"), data: { turbolinks: false } %></td>
              <% end %>

              <% if req.purchase_item.line_item.present? %>
                <td><%= req.purchase_item&.line_item&.title %></td>
                <td><%= req.purchase_item&.purchase_type %></td>
                <td><%= req.purchase_item&.line_item&.sku.upcase %></td>

              <% elsif req.purchase_item.product_variant.present? %>
                <td><%= req.purchase_item&.product_variant&.title %></td>
                <td><%= req.purchase_item&.purchase_type %></td>
                <td><%= req.purchase_item&.product_variant&.sku.upcase %></td>
          
              <% elsif req.purchase_item.product.present? %>
                <td><%= req.purchase_item&.product&.product_variants.second&.title %></td>
                <td><%= req.purchase_item&.purchase_type %></td>
                <td><%= req.purchase_item&.product&.product_variants.second&.sku.upcase if req.purchase_item&.product&.product_variants.second&.sku.present? %></td>
          
              <% end %>

              <td><%= req.purchase_item&.quantity %></td>
              <td><%= req&.cancel_quantity %></td>
              <td><%= req.purchase_item&.quantity.to_i - req&.cancel_quantity.to_i %></td>
              <td>
                <%= link_to "Accept", cancel_request_admin_purchases_path(req_id: req.id, purchase_item_id: req.purchase_item.id, accept: "accept"), class: "btn btn-primary mr-4" %>
                <%= link_to "Reject", cancel_request_admin_purchases_path(req_id: req.id, reject: "reject"), class: "btn btn-secondary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>